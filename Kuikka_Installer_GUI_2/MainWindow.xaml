<Window x:Class="Kuikka_Installer_GUI_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kuikan Missupohjan Asennusohjelma" Height="679" Width="1145" Background="Black" ResizeMode="CanMinimize">
    <Grid x:Name="Main" Background="Black" Margin="10,0,136,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="497*"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="Center_Control_Canvas" HorizontalAlignment="Left" Height="649" Margin="340,-9,0,0" VerticalAlignment="Top" Width="368" Grid.Column="1">
            <Button x:Name="Center_Profile_Btn" Content="Profiili Asetukset" HorizontalAlignment="Left" VerticalAlignment="Top" Width="348" Canvas.Left="10" Canvas.Top="77" Height="33" Click="Center_Profile_Btn_Click" Background="#FFDA9513"/>
            <Button x:Name="Center_AddMusic_Btn" Content="Lisää omaa musiikkia" HorizontalAlignment="Left" VerticalAlignment="Top" Width="348" RenderTransformOrigin="0.484,5.697" Canvas.Top="322" Canvas.Left="10" Height="28" Background="#FFDA9513"/>
            <ProgressBar x:Name="Center_Install_PrgBar" Height="32" Canvas.Top="590" Width="348" Canvas.Left="10"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Valinnaiset Asetukset" VerticalAlignment="Top" Width="342" Foreground="#FFDA9513" TextAlignment="Center" Height="29" Canvas.Left="14" Canvas.Top="293"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Pakolliset Asetukset" VerticalAlignment="Top" Width="348" Foreground="#FFDA9513" TextAlignment="Center" Height="29" Canvas.Left="10" Canvas.Top="43"/>
            <Button x:Name="Center_Script_Btn" Content="Scriptien Asetukset" HorizontalAlignment="Left" VerticalAlignment="Top" Width="348" Canvas.Left="10" Canvas.Top="191" Height="31" Click="Center_Script_Btn_Click" Background="#FFDA9513"/>
            <Button x:Name="Center_Loading_Btn" Content="Latausruudun Asetukset" HorizontalAlignment="Left" VerticalAlignment="Top" Width="348" Canvas.Left="10" Canvas.Top="153" Height="33" Click="Center_Loading_Btn_Click" Background="#FFDA9513"/>
            <Button x:Name="Center_Mission_Btn" Content="Tehtävän Asetukset" HorizontalAlignment="Left" VerticalAlignment="Top" Width="348" Canvas.Left="10" Canvas.Top="115" Height="33" Click="Center_Mission_Btn_Click" Background="#FFDA9513"/>
            <Button x:Name="Center_Install_Btn" Content="Asenna" HorizontalAlignment="Left" VerticalAlignment="Top" Width="348" RenderTransformOrigin="0.484,5.697" Canvas.Left="10" Canvas.Top="530" Height="34" Background="#FFDA9513"/>
            <TextBlock x:Name="Center_Install_TextBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Odottaa..." VerticalAlignment="Top" Width="348" Foreground="#FFDA9513" TextAlignment="Center" Height="16" Canvas.Left="10" Canvas.Top="569"/>
        </Canvas>
        <Canvas x:Name="Code_Edit_Canvas" Height="639" Margin="713,1,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.514,0.46" Grid.Column="1" HorizontalAlignment="Left" Width="371">
            <Button x:Name="Code_Desc_Btn" Content="Description.ext" HorizontalAlignment="Left" VerticalAlignment="Top" Width="174" RenderTransformOrigin="0.484,5.697" Canvas.Left="187" Canvas.Top="67" Height="33" Click="Code_Desc_Btn_Click" Background="#FFDA9513"/>
            <TextBox x:Name="Code_Init_TextBox" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="105" Height="524" Width="351"/>
            <Button x:Name="Code_Init_Btn" Content="Init.sqf" HorizontalAlignment="Left" VerticalAlignment="Top" Width="172" RenderTransformOrigin="0.484,5.697" Canvas.Left="10" Canvas.Top="67" Height="33" Click="Code_Init_Btn_Click" Background="#FFDA9513"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Koodin Käsinmuokkaus" VerticalAlignment="Top" Width="351" Foreground="#FFDA9513" TextAlignment="Center" Height="28" Canvas.Left="10" Canvas.Top="34"/>
            <TextBox x:Name="Code_Desc_TextBox" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="105" Height="524" Width="351"/>
        </Canvas>
        <Canvas x:Name="Profile_Settings_Canvas" HorizontalAlignment="Left" Height="363" VerticalAlignment="Top" Width="344" Margin="6,1,0,0" Grid.ColumnSpan="2" Visibility="Hidden">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Profiili Asetukset" VerticalAlignment="Top" Width="330" Foreground="#FFDA9513" TextAlignment="Center" Height="29" Canvas.Left="10" Canvas.Top="34" Background="Black"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Profiilinimi" VerticalAlignment="Top" Width="122" Foreground="#FFDA9513" TextAlignment="Center" Height="33" Canvas.Left="10" Canvas.Top="68"/>
            <ComboBox x:Name="Profile_Name_ComboBox" Canvas.Left="132" Canvas.Top="68" Width="207" Height="33"/>
        </Canvas>
        <Canvas x:Name="Mission_Settings_Canvas" HorizontalAlignment="Left" Height="363" VerticalAlignment="Top" Width="344" Margin="6,1,0,0" Grid.ColumnSpan="2" Visibility="Hidden">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Kartta" VerticalAlignment="Top" Width="122" Foreground="#FFDA9513" TextAlignment="Center" Height="33" Canvas.Top="66"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Tehtävä Asetukset" VerticalAlignment="Top" Width="328" Foreground="#FFDA9513" TextAlignment="Center" Height="29" Canvas.Left="10" Canvas.Top="32" Background="Black"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Pelimuoto" VerticalAlignment="Top" Width="122" Foreground="#FFDA9513" TextAlignment="Center" Height="33" Canvas.Top="103"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Maksimi pelaajamäärä" VerticalAlignment="Top" Width="122" Foreground="#FFDA9513" TextAlignment="Center" Height="32" Canvas.Top="140"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Kansion Nimi" VerticalAlignment="Top" Width="122" Foreground="#FFDA9513" TextAlignment="Center" Height="32" Canvas.Top="172"/>
            <ComboBox x:Name="Mission_Map_ComboBox" Canvas.Left="127" Canvas.Top="66" Width="211" Height="32"/>
            <ComboBox x:Name="Mission_Gametype_ComboBox" Canvas.Left="127" Canvas.Top="103" Width="211" Height="32" SelectionChanged="Mission_Gametype_ComboBox_SelectionChanged"/>
            <TextBox x:Name="Mission_PlayerAmount_TextBox" Canvas.Left="127" TextWrapping="Wrap" Canvas.Top="140" Width="211" Height="32" TextChanged="Mission_PlayerAmount_TextBox_TextChanged"/>
            <TextBox x:Name="Mission_Folder_TextBox" Canvas.Left="127" TextWrapping="Wrap" Canvas.Top="177" Width="212" Height="32"/>
        </Canvas>
        <Canvas x:Name="Loading_Settings_Canvas" HorizontalAlignment="Left" Height="363" VerticalAlignment="Top" Width="344" Margin="6,1,0,0" Grid.ColumnSpan="2">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Tekijän Nimi" VerticalAlignment="Top" Width="122" Foreground="#FFDA9513" TextAlignment="Center" Height="33" Canvas.Top="67"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Latausruudun Asetukset" VerticalAlignment="Top" Width="328" Foreground="#FFDA9513" TextAlignment="Center" Height="28" Canvas.Left="10" Canvas.Top="34"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Missionin Nimi" VerticalAlignment="Top" Width="122" Foreground="#FFDA9513" TextAlignment="Center" Height="33" Canvas.Top="104"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Info Teksti" VerticalAlignment="Top" Width="122" Foreground="#FFDA9513" TextAlignment="Center" Height="32" Canvas.Top="142"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Latausruudun Kuva" VerticalAlignment="Top" Width="122" Foreground="#FFDA9513" TextAlignment="Center" Height="32" Canvas.Top="179"/>
            <TextBox x:Name="Loading_Author_TextBox" Canvas.Left="127" TextWrapping="Wrap" Canvas.Top="68" Width="211" Height="32" TextChanged="Loading_Author_TextBox_TextChanged"/>
            <TextBox x:Name="Loading_Name_TextBox" Canvas.Left="127" TextWrapping="Wrap" Canvas.Top="105" Width="211" Height="32" TextChanged="Loading_Name_TextBox_TextChanged"/>
            <TextBox x:Name="Loading_Info_TextBox" Canvas.Left="127" TextWrapping="Wrap" Canvas.Top="142" Width="211" Height="32" TextChanged="Loading_Info_TextBox_TextChanged"/>
            <TextBox x:Name="Loading_Image_TextBox1" Canvas.Left="127" TextWrapping="Wrap" Canvas.Top="179" Width="172" Height="32" TextChanged="Loading_Image_TextBox1_TextChanged"/>
            <Button x:Name="Loading_Image_Btn" Content="..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Canvas.Left="299" Canvas.Top="179" Height="32" Padding="12,0,12,4" Background="#FFDA9513"/>
            <CheckBox x:Name="Loading_Image_CheckBox" Content="Käytä Kuikan Kilpeä" Canvas.Left="127" Canvas.Top="216" Width="211" Foreground="#FFDA9513" Checked="Loading_Image_CheckBox_Checked" Unchecked="Loading_Image_CheckBox_Unchecked"/>
        </Canvas>
        <Canvas x:Name="Script_Settings_Canvas" HorizontalAlignment="Left" Height="363" VerticalAlignment="Top" Width="343" Margin="6,1,0,0" Grid.ColumnSpan="2" Visibility="Hidden">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Respawn" VerticalAlignment="Top" Width="122" Foreground="#FFDA9513" TextAlignment="Center" Height="33" Canvas.Top="67"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Scriptien Asetukset" VerticalAlignment="Top" Width="328" Foreground="#FFDA9513" TextAlignment="Center" Height="29" Canvas.Left="10" Canvas.Top="33"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Lääkintä" VerticalAlignment="Top" Width="122" Foreground="#FFDA9513" TextAlignment="Center" Height="32" Canvas.Top="104"/>
            <ComboBox x:Name="Script_Respawn_ComboBox" Canvas.Left="127" Canvas.Top="67" Width="211" Height="32" SelectionChanged="Script_Respawn_ComboBox_SelectionChanged"/>
            <ComboBox x:Name="Script_Medic_ComboBox" Canvas.Left="127" Canvas.Top="104" Width="211" Height="32" SelectionChanged="Script_Medic_ComboBox_SelectionChanged"/>
        </Canvas>
        <Canvas x:Name="RespawnWave_Additional_Canvas" HorizontalAlignment="Left" Height="276" VerticalAlignment="Top" Width="343" Margin="6,364,0,0" Grid.ColumnSpan="2">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Aalto Respawn Asetukset" VerticalAlignment="Top" Width="323" Foreground="#FFDA9513" TextAlignment="Center" Height="29" Canvas.Left="10" Canvas.Top="37"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Respawn Aika Minuutteina" VerticalAlignment="Top" Width="162" Foreground="#FFDA9513" TextAlignment="Center" Height="32" Canvas.Left="10" Canvas.Top="77"/>
            <TextBox x:Name="WaveRespawn_Time_TextBox" Canvas.Left="179" TextWrapping="Wrap" Canvas.Top="77" Width="154" Height="32" TextChanged="WaveRespawn_Time_TextBox_TextChanged"/>
        </Canvas>       
    </Grid>
</Window>
