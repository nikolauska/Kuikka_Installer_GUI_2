        Title="Marker" Height="195" Width="186">
    <Grid Background="Black">
        <Button x:Name="Button_Marker_OK" Content="OK" HorizontalAlignment="Left" Margin="10,131,0,0" VerticalAlignment="Top" Width="75" Click="Button_Marker_OK_Click" Background="#FFDA9513"/>
        <Button x:Name="Button_Marker_Cancel" Content="Peruuta" HorizontalAlignment="Left" Margin="90,131,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.173,-0.2" Click="Button_Marker_Cancel_Click" Background="#FFDA9513"/>
        <TextBox x:Name="TextBox_Marker_Name" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155"/>
        <Label x:Name="Label_Marker_Name" Content="Markkerin Nimi" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.395,-0.038" Width="155" Foreground="#FFDA9513"/>
        <TextBox x:Name="TextBox_Marker_Text" HorizontalAlignment="Left" Height="23" Margin="10,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155"/>
        <Label x:Name="Label_Marker_Text" Content="Markkerin teksti" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.395,-0.038" Width="155" Foreground="#FFDA9513"/>
    </Grid>
</Window>
